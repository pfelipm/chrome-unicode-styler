{
  "manifest_version": 3,
  "name": "Estilizador de Texto Unicode",
  "version": "1.1",
  "description": "Convierte el texto seleccionado a diferentes estilos Unicode y lo copia al portapapeles.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
